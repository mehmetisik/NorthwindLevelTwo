@model CartListViewModel


<h2>Sepetiniz</h2>


@if (Model.cart.CartLines.Count == 0)
{
    <h2>
        Sepetiniz boş
    </h2>
}
else
{
    <table class="table table-responsive">

        <thead>
            <tr>
                <th>Id</th>
                <th>Ürün Adı</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>Stok Adedi</th>
                <th>Satış Addti</th>

            </tr>
        </thead>

        @foreach (var cartLine in Model.cart.CartLines)
        {

            <tbody>
                <tr>
                    <td>@cartLine.Product.ProductId</td>

                    <td>@cartLine.Product.ProductName</td>
                    <td>@cartLine.Product.UnitPrice</td>
                    <td>@cartLine.Product.UnitsInStock</td>
                    <td>@cartLine.Product.QuantityPerUnit</td>
                    <td>@cartLine.Quantity </td>

                    <td> <a class="btn btn-small btn-danger" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-productId="@cartLine.Product.ProductId">Sil</a> </td>

                </tr>
            </tbody>


        }


    </table>
}

